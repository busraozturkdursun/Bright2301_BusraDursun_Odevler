@model List<Instructor>

<div class="row">
    <div class="col-md-2">
        @await Component.InvokeAsync("CategoriesMenu")
    </div>

    <div class="col-md-10">
        <div class="container px-4 px-lg-5 mt-4">
            <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
                @foreach (var item in Model)
                {
                    <div class="col mb-5">
                        <div class="card h-100">
                            <img class="card-img-top" src="/img/default.png" alt="..." />
                            <div class="card-body p-4">
                                <div class="text-center">
                                    <h5 class="fw-bolder">@item.FirstName @item.LastName </h5>
                                    <h6>@item.Category.Name</h6>

                                    $@item.Price
                                </div>
                            </div>

                            <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                                <div class="text-center">
                                    <a class="btn btn-outline-dark mt-auto"
                                       asp-area=""
                                       asp-controller="Home"
                                       asp-action="Detail"
                                       asp-route-id="@item.Id">View options</a>
                                </div>

                            </div>
                        </div>
                    </div>


                }
            </div>
        </div>
    </div>
    <div class="row">
      

        <div class="col-md-12 mt-3">
            @foreach (var category in Model)
            {
                <div>
                    <div class="display-3">
                        @category.Category.Name Nedir?
                        <br />
                    </div class="mt-3">
                    @category.Category.Description
                </div>
            }
        </div>
    </div>
</div>
